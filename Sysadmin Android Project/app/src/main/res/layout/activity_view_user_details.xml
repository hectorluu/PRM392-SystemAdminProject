    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gvUserDetails"
        android:stretchMode="columnWidth"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="#90ffffff"/>

</LinearLayout>